{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-eslint-rules",
    "tslint-config-airbnb",
    "tslint-no-unused-expression-chai"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "max-line-length": [true, 120],
    "no-debugger": true,
    "no-console": true,
    "no-trailing-whitespace": true,
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "ter-indent": [true, 4, {
      "SwitchCase": 1
    }],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 1
      }
    ]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}
