{
  "name": "bmax-utils",
  "version": "0.0.1",
  "description": "A utility bundle which can help in a bunch of situations.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "doc": "typedoc — out doc src/index.ts",
    "build": "tsc",
    "test": "nyc mocha -r ts-node/register -r source-map-support/register src/**/*.spec.ts",
    "coverage": "nyc report --reporter=text-lcov",
    "coverage:coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bmaximilian/bmax-utils.git"
  },
  "keywords": [
    "utils",
    "bmaximilian",
    "typescript",
    "helper"
  ],
  "author": "Maximilian Beck <contact@maximilianbeck.de>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bmaximilian/bmax-utils/issues"
  },
  "homepage": "https://github.com/bmaximilian/bmax-utils#readme",
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 90,
    "branches": 90,
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "src/index.*"
    ],
    "cache": true,
    "all": true,
    "report-dir": "./coverage"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.1.0",
    "nyc": "^11.6.0",
    "source-map-support": "^0.5.4",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.1"
  }
}
